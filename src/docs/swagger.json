        }
      }
    },
    "components": {
      "schemas": {
        "login": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "senha": {
              "type": "string"
            }
          },
          "example": {
            "email": "aline@gmail.com",
            "senha": "12345678"
          }
        },
        "error": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            }
          },
          "example": {
            "message": "motivo do erro"
          }
        },
        "conta": {
          "type": "object",
          "properties": {
            "codCliente": {
              "type": "integer"
            },
            "valor": {
              "type": "integer"
            }
          },
          "example": {
            "codCliente": 1,
            "valor": 10.00
          }
        },
        "ativoUsuario":{
          "type": "object",
            "properties": {
              "codCliente": {
                "type": "integer"
              },
              "valor": {
                "type": "integer"
              },
              "codAtivo":{
                "type":"integer"
              },
              "qtdeAtivo": {
                "type":"integer"
              }
            },
          "example": {
            "codCliente": 1,
            "valor": 10.00,
            "codAtivo": 2,
            "qtdeAtivo":10
          }
        },
        "ativo":{
          "type": "object",
          "properties": {
            "valor": {
              "type": "integer"
            },
            "codAtivo":{
              "type":"integer"
            },
            "qtdeAtivo": {
              "type":"integer"
            }
          },
          "example": {
          "valor": 10.00,
          "codAtivo": 2,
          "qtdeAtivo":10
          }
        },
        "venderComprarAtivo":{
          "type": "object",
          "properties": {
            "codCliente": {
              "type": "integer"
            },
            "codAtivo":{
              "type":"integer"
            },
            "qtdeAtivo": {
              "type":"integer"
            }
          },
          "example": {
          "codCliente": 1,
          "codAtivo": 2,
          "qtdeAtivo":1
          }
        }
      },
      "securitySchemes": {
        "bearerAuth": {
          "name": "authorization",
          "type": "apiKey",
          "scheme": "bearer",
          "in": "header"
        }
      }
    }
  },
  "apis": ["./src/routes/index.js"]
}
