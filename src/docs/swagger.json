      "investimentos/comprar":{
        "post":{
          "summary": "Rota para o usuario compar investimentos da corretora",
          "description": "Para que a ação seja realizada com sucesso é necessario que o o id do reqBody seja correspondente ao token.",
          "tags": ["investimentos"],
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/venderComprarAtivo"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "uma mensagem dizendo que foi bem sucessido",
              "content": {
                "application/json":{
                  "example": {
                    "message": "Ação efetuada com sucesso!"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
