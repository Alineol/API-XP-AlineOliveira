{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "Express api com Swagger",
      "description": "Api utilizando express documentada pelo Swagger",
      "version": "1.0",
      "contact": {
        "email": "allinne.oliveira.ol@gmail.com"
      }
    },
    "paths": {
      "/login": {
        "post": {
          "summary": "Rota para fazer login de usuario",
          "description": "Para fazer login é necessário que o reqBody esteja completo.",
          "tags": ["login"],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/login"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "login realizado com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "token": "dnakjdhuiafhfjflkajfofoufg"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            }
          }
        }
      },
      "/cliente/conta/{codCliente}": {
        "get": {
          "summary": "Rota para pegar a conta pelo id do cliente",
          "description": "Para conseguir acessar essa rota, é necessário que haja um token e que esse token seja correspondente ao id(codCliente) do usuario, caso contrário a rota retornará um erro.",
          "tags": [
            "conta"
          ],
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "codCliente",
              "in": "path",
              "description": "id do cliente",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Objeto contendo codCliente e o saldo da conta",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/conta"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref":"#/components/schemas/error"
                  }
                }
              }
            }
          }
        }
      },
      "cliente/conta/saque":{
        "post":{
          "summary": "Rota para sacar da conta do usuario",
          "description": "Para que a ação seja realizada com sucesso é necessario que o o id do reBody seja correspondente ao token",
          "tags": ["conta"],
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/conta"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "uma mensagem dizendo que foi bem sucessido",
              "content": {
                "application/json":{
                  "example": {
                    "message": "Saque efetuado com sucesso!"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref":"#/components/schemas/error"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            },
            "404": {
              "description": "Not found",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            }
          }
        }
      },
      "cliente/conta/deposito":{
        "post":{
          "summary": "Rota para depositar na conta do usuario",
          "description": "Para que a ação seja realizada com sucesso é necessario que o o id do reBody seja correspondente ao token",
          "tags": ["conta"],
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/conta"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "uma mensagem dizendo que foi bem sucessido",
              "content": {
                "application/json":{
                  "example": {
                    "message": "Depósito efetuado com sucesso!"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref":"#/components/schemas/error"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            },
            "404": {
              "description": "Not found",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            }
          }
        }
      },
      "cliente/ativos/{codCliente}":{
        "get":{
          "summary": "Rota para pegar ativos pelo codCliente",
          "description": "Para conseguir acessar essa rota, é necessário que haja um token e que esse token seja correspondente ao id(codCliente) do usuario, caso contrário a rota retornará um erro.",
          "tags":["ativos"],
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "codCliente",
              "in": "path",
              "description": "id do cliente",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Array contendo todos os ativos do usuario",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items":{
                      "$ref": "#/components/schemas/ativoUsuario"
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref":"#/components/schemas/error"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            },
            "404": {
              "description": "Not found",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            }
          }
        }
      },
      "ativos/":{
        "get":{
          "summary": "Rota para pegar todos os ativos do BD",
          "description": "Para conseguir acessar essa rota, é necessário que o usuario esteja logado",
          "tags":["ativos"],
          "security": [{"bearerAuth": []}],
          "responses": {
            "200": {
              "description": "Um array contendo todos os ativos",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items":{
                      "$ref": "#/components/schemas/ativo"
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref":"#/components/schemas/error"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            },
            "404": {
              "description": "Not found",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            }
          }

        }
      },
      "ativos/{codAtivo}":{
        "get":{
          "summary": "Rota para pega o ativo pelo codAtivo",
          "description": "Para conseguir acessar essa rota, é necessário que o usuario esteja logado",
          "tags":["ativos"],
          "security": [{"bearerAuth": []}],
          "parameters": [
            {
              "name": "codAtivo",
              "in": "path",
              "description": "id do ativo",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Um objeto contendo o ativo encontrado",
              "content": {
                "application/json": {
                  "schema": {
                      "$ref": "#/components/schemas/ativo"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
                  "schema":{
                    "$ref":"#/components/schemas/error"
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            },
            "404": {
              "description": "Not found",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/error"
                  }
                }
              }
            }
          }

        }
      },
      "investimentos/vender":{
        "post":{
          "summary": "Rota para o usuario vender seus investimentos",
          "description": "Para que a ação seja realizada com sucesso é necessario que o o id do reqBody seja correspondente ao token.",
          "tags": ["investimentos"],
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/venderComprarAtivo"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "uma mensagem dizendo que foi bem sucessido",
              "content": {
                "application/json":{
                  "example": {
                    "message": "Ação efetuada com sucesso!"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json":{
